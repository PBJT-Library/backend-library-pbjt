generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Admin model
model Admin {
  id            String   @id @default(uuid())
  username      String   @unique
  password      String
  token_version Int      @default(0) @map("token_version")
  created_at    DateTime @default(now()) @map("created_at")
  updated_at    DateTime @updatedAt @map("updated_at")

  @@map("admins")
}

// Category model
model Category {
  code        String   @id
  name        String   @unique
  description String?
  created_at  DateTime @default(now()) @map("created_at")
  updated_at  DateTime @updatedAt @map("updated_at")

  books BookCatalog[] @relation("CategoryToBooks")

  @@map("categories")
}

// Book Catalog model
model BookCatalog {
  id            String   @id @default(uuid())
  isbn          String   @unique
  title         String
  author        String
  publisher     String
  year          Int
  category_code String   @map("category_code")
  created_at    DateTime @default(now()) @map("created_at")
  updated_at    DateTime @updatedAt @map("updated_at")

  category  Category        @relation("CategoryToBooks", fields: [category_code], references: [code], onDelete: Cascade)
  inventory BookInventory[]

  @@map("book_catalog")
}

// Book Inventory model
model BookInventory {
  id             String   @id @default(uuid())
  book_id        String   @map("book_id")
  inventory_code String   @unique @map("inventory_code")
  condition      String   @default("good")
  status         String   @default("available")
  created_at     DateTime @default(now()) @map("created_at")
  updated_at     DateTime @updatedAt @map("updated_at")

  book  BookCatalog @relation(fields: [book_id], references: [id], onDelete: Cascade)
  loans Loan[]

  @@map("book_inventory")
}

// Member model
model Member {
  uuid          String    @id @default(uuid())
  id            String    @unique
  name          String
  study_program String    @map("study_program")
  semester      Int
  created_at    DateTime? @default(now()) @map("created_at")
  updated_at    DateTime? @updatedAt @map("updated_at")

  loans Loan[]

  @@map("members")
}

// Loan model
model Loan {
  uuid                String    @id @default(uuid())
  id                  String    @unique
  inventory_id        String    @map("inventory_id")
  member_uuid         String    @map("member_uuid")
  loan_date           DateTime  @default(now()) @map("loan_date")
  return_date         DateTime? @map("return_date")
  condition_on_return String?   @map("condition_on_return")
  notes               String?
  created_at          DateTime? @default(now()) @map("created_at")
  updated_at          DateTime? @updatedAt @map("updated_at")

  member    Member        @relation(fields: [member_uuid], references: [uuid], onDelete: Cascade)
  inventory BookInventory @relation(fields: [inventory_id], references: [id], onDelete: Cascade)

  @@map("loans")
}
